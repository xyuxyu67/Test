-- Создание библиотеки
local Library = {}
Library.windows = {}

-- Функция для создания окна
function Library:CreateWindow(settings)
    -- Проверяем, можем ли создать еще окно
    if #self.windows >= 5 then
        warn("Достигнут лимит на количество окон (5).")
        return
    end

    -- Создаем GUI
    local Window = Instance.new("ScreenGui")
    Window.Name = settings.Name
    Window.DisplayOrder = 100  -- Окно будет поверх других GUI-элементов
    Window.ResetOnSpawn = false
    Window.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

    -- Создаем рамку для окна
    local Frame = Instance.new("Frame")
    Frame.Name = "WindowFrame"
    Frame.Size = UDim2.new(0, 130, 0, 30)  -- Размер окна 130x30
    Frame.Position = UDim2.new(0, 0, 0, 0)  -- Позиция в левом верхнем углу
    Frame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    Frame.Parent = Window

    -- Добавляем текст с именем окна
    local Title = Instance.new("TextLabel")
    Title.Text = settings.Name
    Title.Size = UDim2.new(1, 0, 1, 0)
    Title.BackgroundTransparency = 1
    Title.TextColor3 = Color3.fromRGB(0, 0, 0)
    Title.TextSize = 14
    Title.Parent = Frame

    -- Перетаскивание окна
    local dragging = false
    local dragInput, dragStart, startPos

    local function update(input)
        local delta = input.Position - dragStart
        Window.Position = UDim2.new(0, startPos.X + delta.X, 0, startPos.Y + delta.Y)
    end

    Frame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = Window.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)

    Frame.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            update(input)
        end
    end)

    -- Добавляем окно в список окон библиотеки
    table.insert(self.windows, Window)

    return Window
end

-- Возвращаем библиотеку
return Library
